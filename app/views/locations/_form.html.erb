      <ul>
      <% @location.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :address %><br>
    <%= f.text_field :address %>
  </div>
  <div class="field">
  <div class="field">
    <label for="location_latitude">Longitude</label><br>
    <input id="location_latitude" name="location[latitude]" type="text">
  </div>
  <div class="field">
    <label for="location_longitude">Longitude</label><br>
    <input id="location_longitude" name="location[longitude]" type="text">
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>