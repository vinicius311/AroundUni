<h1>Sign Up</h1>

<%= form_for(@regular_user) do |f| %>

  <p>
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </p>
 
  <p>
    <%= f.label :email %><br>
    <%= f.text_field :email %>
  </p>
  <p>
    <%= f.label :gender %><br>
    <%= f.text_field :gender %>
  </p>
  <p>
    <%= f.label :date_of_birth %><br>
    <%= f.date_select :date_of_birth %>
  </p>
  <p>
    <%= f.submit %>
  </p>
<% end %>
